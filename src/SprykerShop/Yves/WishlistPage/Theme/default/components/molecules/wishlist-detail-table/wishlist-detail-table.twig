{% extends model('component') %}

{% define config = {
    name: 'wishlist-table',
    tag: 'div'
} %}

{% define data = {
    wishlistItems: required,
    wishlistName: required
} %}

{% block body %}
    <div class="is-scrollable-x">
        <table class="table table--expand">
            <thead>
                <tr>
                    <th colspan="2">{{ 'customer.account.wishlist.product' | trans  }}</th>
                    <th>{{ 'customer.account.wishlist.price' | trans  }}</th>
                    <th>{{ 'customer.account.wishlist.availability' | trans  }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for item in data.wishlistItems %}
                <tr>
                    <td>
                        {% set imageUrl = item.images[0].externalUrlSmall %}
                        {% if imageUrl %}
                            {% include atom('thumbnail') with {
                                modifiers: ['small', 'min-size'],
                                attributes: {
                                    alt: item.name,
                                    src: imageUrl,
                                    title: item.name,
                                }
                            } only %}
                        {% endif %}
                    </td>
                    <td>
                        <ul>
                            <li><a href="{{ item.url }}">{{ item.name }}</a></li>
                            <li>{{ item.sku }}</li>
                            {% for attribute in item.superAttributesDefinition %}
                                {% if item.attributes[attribute] is defined %}
                                    <li>{{ ('product.attribute.'~attribute) | trans }}: {{ item.attributes[attribute] }}</li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </td>
                    <td nowrap="nowrap">
                        {% if item.price is not null %}
                            {% include molecule('price') with {
                                data: {
                                    amount: item.price | money,
                                    originalAmount: item.prices.DEFAULT is empty ? null : (item.prices.DEFAULT | money)
                                }
                            } only %}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                    <td>
                        {% if item.available %}
                            {{ 'customer.account.wishlist.available' | trans }}
                        {% else %}
                            {{ 'customer.account.wishlist.not_available' | trans }}
                        {% endif %}
                    </td>
                    <td>
                        <ul class="menu menu--inline float-right">
                            {% if item.available and item.price is not null %}
                                <li class="menu__item">
                                    <form id="addToCart_{{ loop.index }}"
                                          class="col"
                                          method="POST"
                                          action="{{ path('wishlist/move-to-cart', {sku: item.sku, 'wishlist-name': data.wishlistName}) }}">
                                                <button type="submit" class="link" title="{{ 'customer.account.wishlist.add-to-cart' | trans }}">
                                                    {% include atom('icon') with {
                                                        data: {
                                                            name: 'cart-plus'
                                                        }
                                                    } only %}
                                                </button>
                                    </form>
                                </li>
                            {% endif %}
                            <li class="menu__item">
                                <form id="deleteWishlistItem_{{ loop.index }}"
                                      class="col"
                                      method="POST"
                                      action="{{ path('wishlist/remove-item', {sku: item.sku, 'wishlist-name': data.wishlistName}) }}">
                                            <button type="submit" class="link" title="{{ 'customer.account.wishlist.remove' | trans }}">
                                                {% include atom('icon') with {
                                                    data: {
                                                        name: 'remove'
                                                    }
                                                } only %}
                                            </button>
                                </form>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
